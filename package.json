{
  "name": "serverless-chrome",
  "version": "1.0.0",
  "description": "Run headless Chrome, serverless-ly",
  "main": "handler.js",
  "engines": {
    "node": ">= 6.10.0"
  },
  "config": {
    "jsSrc": "src/"
  },
  "scripts": {
    "test": "npm run lint && nyc ava",
    "watch:test": "ava --watch",
    "ava": "ava",
    "lint": "npm run lint:eslint -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "coverage": "nyc report",
    "deploy": "serverless deploy -v",
    "postinstall": "if [ ! -f ./config.js ]; then UUID=$(openssl rand -base64 32 | tr -d \"/=+\"); echo \"export default {uuid: \\\"$UUID\\\"}\" > ./config.js; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adieuadieu/serverless-chrome.git"
  },
  "keywords": [
    "serverless",
    "chrome",
    "headless"
  ],
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adieuadieu/serverless-chrome/issues"
  },
  "homepage": "https://github.com/adieuadieu/serverless-chrome",
  "dependencies": {
    "aws-sdk": "^2.32.0",
    "chrome-remote-interface": "^0.18.0",
    "got": "^6.7.1",
    "ps-node": "^0.1.5",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-stage-3": "^6.22.0",
    "babel-register": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "codacy-coverage": "^2.0.1",
    "coveralls": "^2.11.16",
    "decompress": "^4.0.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-tap": "^2.0.0",
    "exports-loader": "^0.6.4",
    "imports-loader": "^0.7.1",
    "json-loader": "0.5.4",
    "nyc": "^10.1.2",
    "serverless": "^1.9.0",
    "serverless-webpack": "^1.0.0-rc.4",
    "tap-xunit": "^1.7.0",
    "webpack": "1.14.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "sourceMaps": "inline",
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6.1
          }
        }
      ],
      "stage-3"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "import"
    ],
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src",
          "./"
        ]
      }
    },
    "rules": {
      "no-console": 0,
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  }
}
