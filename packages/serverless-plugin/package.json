{
  "name": "@quicksprout/serverless-plugin-chrome-puppeteer",
  "version": "1.0.0",
  "description": "A Serverless-framework plugin that takes care of running headless Chrome with Puppeteer so that you can move on with getting things done.",
  "keywords": [
    "serverless",
    "serverless-framework",
    "chrome",
    "chromium",
    "headless",
    "aws",
    "lambda",
    "puppeteer"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -Rf dist/",
    "test": "npm run test:integration",
    "test:integration": "scripts/test-integration.sh",
    "watch:test": "ava --watch",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run clean && npm run build",
    "upgrade-dependencies": "yarn upgrade-interactive --latest --exact"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quicksprout/serverless-chrome.git"
  },
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quicksprout/serverless-chrome/issues"
  },
  "homepage": "https://github.com/quicksprout/serverless-chrome/tree/master/packages/serverless-plugin",
  "dependencies": {
    "@quicksprout/lambda": "1.0.0",
    "fs-p": "2.0.0",
    "globby": "6.1.0"
  },
  "devDependencies": {
    "ava": "0.24.0",
    "babel-core": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "chrome-launcher": "0.10.0",
    "rollup": "0.53.3",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-node-resolve": "3.0.0"
  },
  "babel": {
    "sourceMaps": true,
    "presets": [
      [
        "env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "6.10"
          }
        }
      ]
    ]
  }
}
