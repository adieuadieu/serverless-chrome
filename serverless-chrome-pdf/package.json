{
  "name": "serverless-chrome-pdf",
  "version": "0.0.1",
  "description": "Serverless-based Lambda function to generate a PDF using headless Chromium",
  "main": "handler.js",
  "config": {
    "jsSrc": "src/"
  },
  "scripts": {
    "test": "npm run lint && nyc ava",
    "watch:test": "ava --watch",
    "lint": "npm run lint:eslint -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "coverage": "nyc report",
    "deploy": "npm test && serverless deploy -v",
    "__postinstall": "if [ ! -f ./config.json ]; then cp ./config.sample.json ./config.json; fi && if [ ! -f ./event.json ]; then cp ./event.sample.json ./event.json; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adieuadieu/thingamajigs.git"
  },
  "keywords": [
    "serverless",
    "chrome",
    "headless",
    "pdf"
  ],
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adieuadieu/thingamajigs/issues"
  },
  "homepage": "https://github.com/adieuadieu/thingamajigs/serverless-chrome-pdf",
  "dependencies": {
    "aws-sdk": "^2.22.0",
    "babel-runtime": "^6.23.0",
    "chrome-remote-interface": "^0.18.0",
    "uuid": "^3.0.1",
    "yaml-loader": "^0.4.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.23.1",
    "babel-eslint": "7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "babel-register": "^6.23.0",
    "codacy-coverage": "^2.0.1",
    "coveralls": "^2.11.16",
    "decompress": "^4.0.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-tap": "^2.0.0",
    "fs-extra": "^2.0.0",
    "json-loader": "0.5.4",
    "nyc": "^10.1.2",
    "serverless": "^1.8.0",
    "serverless-webpack": "^1.0.0-rc.4",
    "tap-xunit": "^1.7.0",
    "webpack": "1.14.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "sourceMaps": "inline",
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-3"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "import"
    ],
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src",
          "./"
        ]
      }
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        2,
        140,
        2
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  }
}
